<div class="navbar px-3">
	<div class="container">
		<div class="col-md-3">
			<button @onclick="@(() => MoveToPage("/"))" class="btn btn-primary nav-addin"><div>Home</div></button>
		</div>
		<div class="col-md-3">
			<button @onclick="@(() => MoveToPage("/helloworld"))" class="btn btn-primary nav-addin"><div>Hello World</div></button>
		</div>
		<div class="col-md-3">
			<button @onclick="@(() => MoveToPage("/requestcontextdemo"))" class="btn btn-primary nav-addin"><div>Request Context</div></button>
		</div>
		<div class="col-md-3">
			<button @onclick="@(() => MoveToPage("/contentcontroldetailed"))" class="btn btn-primary nav-addin"><div>Content Controls</div></button>
		</div>
	</div>
</div>

@code {

	[Inject]
	public NavigationManager NavigationManager { get; set; } = default!;

	void MoveToPage(string page)
	{
		NavigationManager.NavigateTo(page, true);
	}
}
